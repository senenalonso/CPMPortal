<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Búsqueda de componentes</h1>
    </div>
</div> 
<div class="container">
<form class="form-horizontal" action="/components/search" method="POST">
  <div class="row">
    <div class="col-md-10 col-pad-bot-5 form-group">
        <label class="col-md-2 control-label" for="remedy">Nombre:</label>  
        <div class="form-group input-group col-md-6">
            <input name="remedy" type="text" class="form-control input-md">
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-pad-bot-5">
      <div class="form-group">
        <label class="col-md-2 control-label" for="result">Categoría:</label>
        <div class="col-md-6">
          <select name="category" class="form-control">
            <option value=""></option>
            <option value="APP">Aplicación</option>
            <option value="SQL">Sentencia SQL</option>
            <option value="SP">Procedimiento almacenado</option>
            <option value="JCL">JCL</option>
          </select>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-pad-bot-5">
      <div class="form-group">
        <label class="col-md-2 control-label" for="result">Estado:</label>
        <div class="col-md-6">
			    <select name="status" class="form-control">
			      <option value=""></option>
			      <option value="En curso">En curso</option>
			      <option value="Cerrado">Cerrado</option>
			    </select>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3">
      <button type="submit" class="btn btn-lg btn-primary">Buscar</button>
  </div>
</div>
