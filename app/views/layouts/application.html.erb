<!DOCTYPE html>
<html>
<head>
	<title>:: OCTA Portal ::</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= javascript_include_tag 'application' %>
</head>

<body>
	<div id="wrapper">
		<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">OCTA - Performance Management Portal</a>
			</div>		
	<%if !current_user %>				
		</nav>			
		<div id="page-wrapper">
				<%= yield %>
		</div>
	<%else%>
			<ul class="nav navbar-top-links navbar-right">
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">
						<i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
					</a>
					<ul class="dropdown-menu dropdown-user">
						<li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
						</li>
						<li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
						</li>
						<li class="divider"></li>
						<li><%= link_to ' Logout', destroy_user_session_path, method: 'DELETE', class: 'fa fa-sign-out fa-fw' %>
						</li>
					</ul>
				</li>
			</ul>
			<div class="navbar-default sidebar" role="navigation">
				<div class="sidebar-nav navbar-collapse">
					<ul class="nav" id="side-menu">
						<li>
							<a href="/"><i class="fa fa-dashboard fa-fw"></i> Posición global</a>
						</li>
						<li>
							<a href="#"><i class="fa fa-paperclip fa-fw"></i> Proyectos<span class="fa arrow"></span></a>
							<ul class="nav nav-second-level">
								<li>
									<a href="/projects/new">Nuevo</a>
								</li>
								<li>
									<a href="/projects/search">Búsqueda</a>
								</li>
							</ul>
						</li>
						<li>
							<a href="/components/search"><i class="fa fa-table fa-fw"></i> Componentes</a>
						</li>
						<li>
							<a href="#"><i class="fa fa-list-ol fa-fw"></i> Recomendaciones<span class="fa arrow"></span></a>
							<ul class="nav nav-second-level">
								<li>
									<a href="#">Emitidas</a>
								</li>
								<li>
									<a href="#"><i class="fa fa-list-ol fa-fw"></i> Pendientes<span class="fa arrow"></span></a>
									<ul class="nav nav-third-level">
										<li>
											<a href="#">De implantar</a>
										</li>
										<li>
											<a href="#">De medir mejoras</a>
										</li>
									</ul>
								</li>
							</ul>
						</li>
						<%if current_user && current_user.admin?%>
						<li>
							<a href="/statistics"><i class="fa fa-signal fa-fw"></i> Estadísticas</a>
						</li>
						<%end%>
					</ul>
				</div>
			</div>
		</nav>
		<div id="page-wrapper">
				<%= yield %>
		</div>	
	<%end%>
	</div>
</body>
</html>
