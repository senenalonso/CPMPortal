<div class="row">
  <div class="col-lg-12 pad-top-10">
  	<div class="panel panel-info">
		  <div class="panel-heading">
		      <span>:: DETALLES DEL PROYECTO ::</span>
		  </div>
		  <!-- .panel-heading -->
		  <div class="panel-body">
		      <div class="panel-group" id="accordion">
		          <div class="panel panel-default">
		              <div class="panel-heading">
		                  <h4 class="panel-title inline-h4">
		                      <a data-toggle="collapse" data-parent="#accordion" href="#collapse1" onclick="$('#components').toggleClass('hidden')">Datos del proyecto</a>
		                  </h4>
		              </div>
		              <div id="collapse1" class="panel-collapse collapse in">
		                  <div class="panel-body">
		                      <%= render 'form', project: @project %>
		                  </div>
		              </div>
		          </div>
		          <div class="panel panel-default">
		              <div class="panel-heading">
		                  <h4 class="panel-title inline-h4">
		                      <a data-toggle="collapse" data-parent="#accordion" href="#collapse2" onclick="$('#components').toggleClass('hidden')">Componentes del proyecto</a>
		                  </h4>
		                  <div id="components" class="pull-right hidden">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                Opciones
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li><a href="/components/new">AÃ±adir nuevo componente</a>
                                </li>
                                <li><a href="/project">Ver informe</a>
                                </li>
                                <li><a href="/project">Flujo de trabajo</a>
                                </li>
                            </ul>
                        </div>
                      </div>
		              </div>
		              <div id="collapse2" class="panel-collapse collapse">
		                  <div class="panel-body">
		                      <%@components.each do |c, index| %>
			                    <div class="panel panel-default">
			                        <div class="panel-heading">
			                            <h4 class="panel-title inline-h4">
			                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%=c.id%>"><%=c.name%></a>
			                            </h4>
			                        </div>
			                        <div id="collapse<%=c.id%>" class="panel-collapse collapse">
			                            <div class="panel-body">
			                                <%=c.description%>
			                            </div>
			                        </div>
			                    </div>
			                    <% end %>
		                  </div>
		              </div>
		          </div>
		          <div class="panel panel-default">
		              <div class="panel-heading">
		                  <h4 class="panel-title inline-h4">
		                      <a data-toggle="collapse" data-parent="#accordion" href="#collapse3" onclick="$('#components').toggleClass('hidden')">Recomendaciones del proyecto</a>
		                  </h4>
		              </div>
		              <div id="collapse3" class="panel-collapse collapse">
		                  <div class="panel-body">
		                      RECOMENDCIONES
		                  </div>
		              </div>
		          </div>
		      </div>
		  </div>
		</div>
	</div>
</div>