<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <a name="libres">Pruebas asignadas al usuario</a>
            </div>
            <div class="panel-body">
                <div class="panel-group" id="accordion">
                    <% if @info_projects["tests"].size>0 %>
                    <%@info_projects["tests"].each do |p, index| %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title inline-h4">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%=p.id%>"><%=p.name%></a>
                            </h4>
                            <div class="pull-right">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                        Opciones
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu pull-right" role="menu">
                                        <li><a href="/projects/<%=p.id%>/edit">Editar/Ver detalles</a>
                                        </li>
                                        <li><a href="#">Enlace al HP ALM</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div id="collapse<%=p.id%>" class="panel-collapse collapse">
                            <div class="panel-body">
                                <%=p.description%>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    <% else %>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title inline-h4">
                                    No hay proyectos asignados
                                </h4>
                            </div>
                        </div>
                    <% end %>   
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="panel panel-opt">
            <div class="panel-heading">
                <a name="libres">Optmizaciones asignadas al usuario</a>
            </div>
            <div class="panel-body">
                <div class="panel-group" id="accordion2">
