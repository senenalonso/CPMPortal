                                    <a data-toggle="collapse" data-parent="#accordion2" href="#collapse<%=p.id%>"><%=p.name%></a>
                                </h4>
                                <div class="pull-right">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                            Opciones
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu pull-right" role="menu">
                                            <li><a href="/projects/<%=p.id%>/edit">Editar/Ver detalles</a>
                                            </li>
                                            <li><a href="/projects/<%=p.id%>/report.pdf">Ver informe</a>
                                            </li>
                                            <li><a href="/projects/<%=p.id%>/flow">Flujo de trabajo</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div id="collapse<%=p.id%>" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <%=p.description%>
                                </div>
                            </div>
                        </div> 
                        <% end %>
                    <% else %>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title inline-h4">
                                    No hay proyectos asignados
                                </h4>
                            </div>
                        </div>
                    <% end %>                    
                </div>
            </div>
        </div>
    </div>
</div> 
